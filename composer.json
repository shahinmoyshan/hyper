{
    "name": "vulcanphp/hyper",
    "type": "project",
    "description": "Sweet and MVC Based Php Tiny Web Framework",
    "keywords": ["vulcanphp", "hyper", "mvc", "web framework", "php framework", "framework"],
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "vulcanphp/hyper-core": "^1.0"
    },
    "authors": [
        {
            "name": "Shahin Moyshan",
            "email": "shahin.moyshan2@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "./app"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_put_contents('env.php', str_replace('{APP_KEY}', bin2hex(random_bytes(16)), file_get_contents('env.example.php')));\""
        ]
    },
    "config": {
        "optimize-autoloader": true
    }
}
